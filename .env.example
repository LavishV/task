# MongoDB Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/realestate_db

# JWT Authentication Secrets
JWT_ACCESS_SECRET=your-super-secret-access-key-min-32-chars-recommended
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars-recommended

# Token Expiry Times
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Security
BCRYPT_SALT_ROUNDS=12

# Default Admin Account (only seeds if SEED_ADMIN=true)
SEED_ADMIN=false
DEFAULT_ADMIN_EMAIL=admin@realestate.com
DEFAULT_ADMIN_PASSWORD=Admin@12345

# Registration Settings
ALLOW_REGISTRATION=true

# Environment
NODE_ENV=production

# Frontend API Configuration
VITE_API_URL=/api

# Server Port
PORT=5000

# CORS Origins (comma-separated for production)
CORS_ORIGINS=https://your-domain.com
